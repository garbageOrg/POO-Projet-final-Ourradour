            <Button Content="ADRESSE" Background="#FF8C0E0E" Foreground="White" MinWidth="120" Click="Button_Click_2" />
        </StackPanel>
        <Label Content="Notre adresse : 12 avenue Leonard de Vinci 92400 Courbevoie" Foreground="White" HorizontalAlignment="Left" Margin="376,202,0,0" VerticalAlignment="Top"/>
